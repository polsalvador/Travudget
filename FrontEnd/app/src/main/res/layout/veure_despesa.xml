<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout_viatge"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.Travudget.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/Theme.Travudget.PopupOverlay">

                <ImageButton
                    android:id="@+id/btn_return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_cross" />

                <ImageButton
                    android:id="@+id/btn_options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_options" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewAllotjament"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_categoria_allotjament"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Allotjament"/>

            <ImageView
                android:id="@+id/imageViewCompres"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_categoria_compres"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Compres"/>

            <ImageView
                android:id="@+id/imageViewMenjar"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_categoria_menjar"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Menjar"/>
            <ImageView
                android:id="@+id/imageViewTransport"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_categoria_transport"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Transport"/>

            <ImageView
                android:id="@+id/imageViewTurisme"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_categoria_turisme"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Turisme"/>

            <ImageView
                android:id="@+id/imageViewAltres"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_categoria_altres"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Altres"/>

        </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutPreu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/layoutBarraSuperior"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/textPreu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preu"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

            </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutDeutes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <LinearLayout
                android:id="@+id/layoutNom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/layoutBarraSuperior"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/textNomDespesa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NomDespesa"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutDataInici"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/layoutBarraSuperior"
                android:layout_marginStart="16dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="start">

                <ImageButton
                    android:id="@+id/btn_dataInici"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_calendar" />

                <TextView
                    android:id="@+id/textDataInici"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Data Inici"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutDataFi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/layoutBarraSuperior"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="start">

                <ImageButton
                    android:id="@+id/btn_dataFi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_calendar" />

                <TextView
                    android:id="@+id/textDataFi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Data de fi no definida"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutUbicacio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/layoutBarraSuperior"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="start">

                <ImageButton
                    android:id="@+id/btn_ubicacio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_ubicacio" />

                <TextView
                    android:id="@+id/textUbicacio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="UbicaciÃ³ no definida"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

            </LinearLayout>

        </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>