<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.travudget.travudget">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Travudget"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Travudget.NoActionBar"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IniciSessio">
        </activity>
        <activity
            android:name=".Principal">
        </activity>
        <activity
            android:name=".CrearViatge">
        </activity>
        <activity
            android:name=".Divises">
        </activity>
        <activity
            android:name=".Viatge">
        </activity>
        <activity
            android:name=".ViatgeEditar">
        </activity>
        <activity
            android:name=".CrearDespesa">
        </activity>
        <activity
            android:name=".EditarDespesa">
        </activity>
        <activity
            android:name=".VeureDespesa">
        </activity>
        <activity
            android:name=".MapActivity">
        </activity>
        <activity
            android:name=".FiltrarDespeses">
        </activity>
        <activity
            android:name=".IntroduirCodi">
        </activity>
        <activity
            android:name=".VeureViatge">
        </activity>
    </application>
</manifest>
